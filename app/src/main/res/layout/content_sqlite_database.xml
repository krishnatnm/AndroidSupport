<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tanmay.androidsupport.activities.SQLiteDatabase"
    tools:showIn="@layout/activity_sqlite_database">

    <Button
        android:id="@+id/csd_add_to_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin_double"
        android:layout_marginTop="@dimen/activity_margin_half"
        android:layout_marginBottom="@dimen/activity_margin_half"
        android:layout_marginRight="@dimen/activity_margin_double"
        android:text="Add Images to Database" />

    <Button
        android:id="@+id/csd_clear_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/csd_add_to_db"
        android:layout_marginLeft="@dimen/activity_margin_double"
        android:layout_marginRight="@dimen/activity_margin_double"
        android:layout_marginTop="@dimen/activity_margin_half"
        android:layout_marginBottom="@dimen/activity_margin_half"
        android:text="CLear Database" />

    <Button
        android:id="@+id/csd_show_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/csd_clear_db"
        android:layout_marginTop="@dimen/activity_margin_half"
        android:layout_marginBottom="@dimen/activity_margin_half"
        android:layout_marginLeft="@dimen/activity_margin_double"
        android:layout_marginRight="@dimen/activity_margin_double"
        android:text="CLear Database" />

</RelativeLayout>
