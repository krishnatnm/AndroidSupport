<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawer_item_button">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/drawer_item_icon"
        android:layout_height="@dimen/drawer_item_icon"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/drawer_item_padding" />

    <TextView
        android:id="@+id/drawer_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_icon"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/drawer_item_padding"
        android:text="..."
        android:textColor="@android:color/black" />

</RelativeLayout>