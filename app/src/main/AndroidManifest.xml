        <activity
            android:name="com.facebook.FacebookActivity"
            android:label="@string/title_activity_facebook" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="53ef6e274bd80efc6bb7121fa4248cfc2559e621" />

        <activity
            android:name=".view.activities.SpeedometerActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_speedometer_view"
            android:parentActivityName=".view.activities.DesignHome"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activities.DesignHome"
            android:configChanges="orientation|keyboardHidden"
