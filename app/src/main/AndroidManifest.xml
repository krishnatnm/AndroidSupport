            android:parentActivityName=".view.activities.GoogleHome"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name="com.android.camera.CropImage" />
        <activity
            android:name=".view.activities.ParallaxWithWebView"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_parallax_with_web_view"
            android:parentActivityName=".view.activities.DesignHome"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activities.Signature"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_signature"
            android:parentActivityName=".view.activities.DesignHome"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activities.CameraUpload"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_camera_upload"
            android:parentActivityName=".view.activities.PhoneHome"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>